{
  "manifest_version": 3,
  "name": "Amazon ASIN & Offer ID Copier",
  "version": "1.1.1",
  "description": "Copiez rapidement l'ASIN et l'Offer ID du produit affich√© sur Amazon.",
  "permissions": ["activeTab", "clipboardWrite", "scripting"],
  "host_permissions": [
    "https://www.amazon.fr/*",
    "https://www.amazon.de/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
